<?xml version="1.0" encoding="UTF-8"?>
<layout useSafeAreaInsets="false" useDefaultMargins="true">

<view id="rootClass">

  <view id="container1" style="flex-grow:1; justify-content: flex-start">
    <label id="label1"/>
    <button id="button1" type="custom"/>
  </view>

  <view id="container2" style="flex-grow:1; flex-wrap: wrap; justify-content: flex-start">
    <label id="label2" style="font: HelveticaNeue-Bold 22; text-color: red">Hello hot reloadable world!!</label>
    <label id="label3" style="text-color: white; margin-top: 20">(Try editing MainView.xml or MainView.css while running the app in the sim)</label>
  </view>

</view>

<style>
  // Styles unique to this particular view can be defined directly here in the layout file, or in a css file with the same name as the layout file (i.e. "ViewController.css").
  #rootClass {
    flex-direction: column;
    align-items: stretch;
    justify-content: center;
  }
  #rootClass:landscape {
    flex-direction: row;
  }
  #container1, #container2 {
    padding: 30;
    flex-direction: column;
    align-items: center;
  }
  #container1 {
    background-color: #e9168c;
  }
  #container2 {
    background-color: #3a4ca8;
  }
  #label3 {
    font: HelveticaNeue-Medium 18;
    numberOfLines: 0;
    textAlignment: center;
  }
</style>

</layout>
